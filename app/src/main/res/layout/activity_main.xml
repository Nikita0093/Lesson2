<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@drawable/mountain"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:rowCount="6">

        <TextView
            android:id="@+id/DisplayInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:hint="@string/lets_calculate"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/C"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_7"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_4"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_1"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonPlus_minus"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Plus_minus"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonHooks"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Hooks"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_8"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_5"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_2"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_0"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Percent"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_9"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_6"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/_3"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Dot"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Delete"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonMultiplication"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Multiplication"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonSubtraction"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Subtraction"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Plus"
            app:cornerRadius="@dimen/Radius_Button" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="@dimen/Width_Button"
            android:layout_height="@dimen/Height_Button"
            android:text="@string/Equal"
            app:cornerRadius="@dimen/Radius_Button" />


    </GridLayout>

</FrameLayout>






